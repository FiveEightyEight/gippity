<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Chat App" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
